{
  "name": "louiechristie.com",
  "version": "0.2.0",
  "description": "## Setup local development",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "watch": "eleventy --serve",
    "build": "eleventy --quiet",
    "serve": "cd _site && npx serve --no-request-logging && cd ..",
    "start": "npx @11ty/eleventy --serve --quiet",
    "test": "npx playwright test --max-failures=1",
    "debug:test": "npx playwright test --ui",
    "debug:github-action": "open -a Docker && act --container-architecture linux/amd64 --artifact-server-path ~/Desktop/artifacts",
    "compare": "diff $INIT_CWD/_tmp/bak $INIT_CWD/_site --color --recursive --exclude={.*,README*,readme*,start,deploy,shower-of-comedy,travel-guide} --ignore-all-space --strip-trailing-cr",
    "deploy:trivia-trundle": "rsync -avhP --delete ~/Documents/trivia-trundle/dist/ ~/Documents/louiechristie.com/_site/trivia-trundle",
    "deploy:weeks-to-go": "rsync -avhP --delete ~/Documents/weeks-to-go/build/ ~/Documents/louiechristie.com/_site/weeks-to-go",
    "deploy:intro-to-web-dev-course": "rsync -avhP ./_tmp/bak/intro-to-web-dev-course ~/Documents/louiechristie.com/_site/intro-to-web-dev-course",
    "deploy:blog": "rsync -avhP ./_tmp/bak/blog ~/Documents/louiechristie.com/_site/blog",
    "deploy:subfolders": "npm run deploy:weeks-to-go && npm run deploy:trivia-trundle && npm run deploy:intro-to-web-dev-course && npm run deploy:blog",
    "deploy": "npm run deploy:subfolders && ~/Documents/louiechristie.com/node_modules/wrangler/bin/wrangler.js pages deploy _site"
  },
  "keywords": [],
  "author": "Louie Christie",
  "license": "UNLICENSED",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.3",
    "eleventy-auto-cache-buster": "^0.8.3",
    "wrangler": "^4.54.0"
  },
  "dependencies": {
    "@11ty/eleventy-img": "^6.0.4",
    "dotenv": "^17.2.3"
  }
}
