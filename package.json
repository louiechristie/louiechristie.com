{
	"name": "louiechristie.com",
	"version": "0.3.0",
	"description": "Repository for louiechristie.com homepage and blog",
	"type": "module",
	"scripts": {
		"build": "npm run import && npx @11ty/eleventy",
		"build-nocolor": "cross-env NODE_DISABLE_COLORS=1 npx @11ty/eleventy",
		"build-ghpages": "npx @11ty/eleventy --pathprefix=/eleventy-base-blog/",
		"serve": "cd _site && npx serve --no-request-logging && cd ..",
		"start": "npm run import && npx @11ty/eleventy --serve",
		"start-ghpages": "npx @11ty/eleventy --pathprefix=/eleventy-base-blog/ --serve --quiet",
		"debug": "cross-env DEBUG=Eleventy* npx @11ty/eleventy",
		"debugstart": "cross-env DEBUG=Eleventy* npx @11ty/eleventy --serve --quiet",
		"benchmark": "cross-env DEBUG=Eleventy:Benchmark* npx @11ty/eleventy",
		"import": "node ./node_modules/@11ty/import/cli.js wordpress https://louiechristie.wordpress.com/ --overwrite --output=/content/blog/ --cacheduration=1d",
		"lint": "djlint . --profile=nunjucks --extension njk --ignore='H005,H006,H007,H008,H009,H010,H011,H012,H013,H014,H015,H016,H019,H020,H021,H022,H023,H024,H026,H029,H030,H031,H033,J004,J018,T001,T002,T027,T028,T032,T034' --include='H025,T003,H037' && npm run format:check",
		"format:check": "djlint . --profile=nunjucks --extension njk --check",
		"format:fix": "djlint . --profile=nunjucks --extension njk --reformat",
		"test": "npm run lint && npx playwright test --max-failures=1",
		"debug:test": "npx playwright test --ui",
		"debug:github-action": "open -a Docker && act --container-architecture linux/amd64 --artifact-server-path ~/Desktop/artifacts",
		"compare": "diff $INIT_CWD/_tmp/bak $INIT_CWD/_site --color --recursive --exclude={.*,README*,readme*,start,deploy,shower-of-comedy,travel-guide} --ignore-all-space --strip-trailing-cr",
		"deploy:trivia-trundle": "rsync -avhP --delete ~/Documents/trivia-trundle/dist/ ~/Documents/louiechristie.com/_site/trivia-trundle",
		"deploy:weeks-to-go": "rsync -avhP --delete ~/Documents/weeks-to-go/build/ ~/Documents/louiechristie.com/_site/weeks-to-go",
		"deploy:intro-to-web-dev-course": "rsync -avhP ./_tmp/bak/intro-to-web-dev-course/ ~/Documents/louiechristie.com/_site/intro-to-web-dev-course",
		"deploy:memes": "rsync -avhP ~/Documents/memes/out/ ~/Documents/louiechristie.com/_site/memes",
		"deploy:subfolders": "npm run deploy:weeks-to-go && npm run deploy:trivia-trundle && npm run deploy:intro-to-web-dev-course && npm run deploy:memes",
		"deploy": "npm run build && npm run deploy:subfolders && npm run test && ~/Documents/louiechristie.com/node_modules/wrangler/bin/wrangler.js pages deploy _site"
	},
	"keywords": [],
	"author": "Louie Christie",
	"license": "UNLICENSED",
	"engines": {
		"node": ">=18"
	},
	"devDependencies": {
		"@11ty/eleventy": "^3.1.2",
		"@11ty/eleventy-img": "^6.0.4",
		"@11ty/eleventy-navigation": "^1.0.5",
		"@11ty/eleventy-plugin-rss": "^2.0.4",
		"@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
		"@11ty/import": "^1.0.16",
		"@playwright/test": "^1.58.1",
		"@types/node": "^24.10.9",
		"cross-env": "^10.1.0",
		"dotenv": "^17.2.3",
		"eleventy-auto-cache-buster": "^0.8.3",
		"luxon": "^3.7.2",
		"prismjs": "^1.30.0",
		"wrangler": "^4.61.1",
		"zod": "^4.3.6",
		"zod-validation-error": "^4.0.2"
	},
	"dependencies": {
		"@zachleat/heading-anchors": "^1.0.5"
	}
}
