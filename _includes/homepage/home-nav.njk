<header>
  <nav>
    {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}	
    <h2 class="visually-hidden">Top level navigation menu</h2>
    <ul class="nav">
    {%- for entry in collections.all | eleventyNavigation %}
      {%- set isHomePage = entry.url == "/" %}
      <li class="nav-item {% if isHomePage %}selected{% endif %}">
        <a 
          href="{{ entry.url }}"
          {% if isHomePage %} aria-current="page"{% endif %}
        >
          {{ entry.title }}
        </a>
      </li>
    {%- endfor %}
    </ul>

    <h2 class="visually-hidden">Secondary level navigation menu</h2>
    
    {% include "about/about-nav.njk" %}
  </nav>
</header>
